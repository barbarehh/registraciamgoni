<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FF4E9"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="რეგისტრაცია"
        android:textColor="#06444C"
        android:textSize="29sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/saxeli"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#06444C"
            android:textColorHint="#09707E"
            android:hint="სახელი" />
        <EditText
            android:id="@+id/gvari"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#06444C"
            android:textColorHint="#09707E"
            android:hint="გვარი" />




    </LinearLayout>
        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="E-mail"
            android:textColorHint="#09707E"
            android:backgroundTint="#06444C"/>
        <EditText
            android:id="@+id/paroli"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textColorHint="#09707E"
            android:hint="პაროლი"
            android:backgroundTint="#06444C"/>
        <CheckBox
            android:id="@+id/check"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="ვეთანხმები წესებს,ok?"
            android:textColorHint="#06444C"/>
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done var"
            android:backgroundTint="#056773"
            android:layout_gravity="center"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>